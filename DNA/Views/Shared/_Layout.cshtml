<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
	<link rel="icon" type="image/x-icon" href="/Image/DNA.jpg" sizes="32x32" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />

	<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
</head>
<body>

	<div class="container-fluid">
		<header class="header sticky-heading ">
			<div class="row">

				<div class="col-1">
				</div>

				<div class="col-3 d-flex align-items-center">
					<img width="33" height="33" src="~/Image/DNA.jpg" class="me-3" />
					<h5>Dotnet Academy</h5>
				</div>


				<div class="col-5">

					
				</div>


				<div class="col-3 text-center">

					<a href=" https://www.facebook.com/profile.php?id=100063656465953" target="_blank" class="social-icon me-3">
						<img width="25" height="25" src="https://img.icons8.com/fluency/48/facebook-new.png" />
					</a>

					<a href= "https://www.youtube.com/@@dotnetacademybd" target="_blank" class="social-icon">
						<img width="25" height="25" src="https://img.icons8.com/color/48/youtube-play.png" />
					</a>

				</div>

			</div>
		</header>	
		
		<div class="container main">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>


		<footer class="border-top footer text-muted">
			<div class="container mt-4">
				<h6>&copy; @DateTime.Now.Year - Dotnet Academy – All Rights Reserved.</h6>
			</div>
		</footer>
	</div>


	
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
